<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="@dimen/activity_vertical_margin"
	android:gravity="center_horizontal">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:id="@+id/main_gg"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="图片路径："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_picpath"
			android:layout_weight="1.0">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:maxLines="2"
            android:hint="图片路径"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>
        
        </android.support.design.widget.TextInputLayout>
        
		<Button
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="浏览"
			android:onClick="onChoosePathClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
			android:id="@+id/main_btn_picpath"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="输出路径："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_outpath"
            android:layout_weight="1.0">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:maxLines="2"
            android:hint="输出路径"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"/>
        
        </android.support.design.widget.TextInputLayout>
        
		<Button
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="浏览"
			android:onClick="onChoosePathClick"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
			android:id="@+id/main_btn_outpath"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="像素文字："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_word">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
            android:hint="像素文字"
			android:text="龍"
			android:maxLength="1"
			android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        
	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="网页编码："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_code">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
            android:hint="网页编码"
			android:text="utf-8"
			android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        
	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="网页标题："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_title">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
            android:hint="网页标题"
			android:text="TITLE"
			android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        
	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="字体大小："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_fontsize">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
            android:hint="字体大小"
			android:text="10"
			android:digits="1234567890"
			android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        
	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="背景颜色："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_backcolor">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
            android:hint="背景颜色"
			android:text="#000000"
			android:digits="0123456789abcdefABCDEF#"
			android:maxLines="1"
			android:maxLength="7"/>

        </android.support.design.widget.TextInputLayout>
        
	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
<!--
		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="字体样式："
			android:textColor="#000000"/>
-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:id="@+id/main_edit_fonttype">
            
		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000"
            android:hint="字体样式"
			android:text="monospace"
			android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>
        
	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="分次次数："
			android:textColor="#000000"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="1"
			android:textColor="#000000"
			android:gravity="center"
			android:id="@+id/main_txt_cutcount"/>

		<SeekBar
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:id="@+id/main_skb_cutcount"/>

	</LinearLayout>

	<Button
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="生成HTML"
		android:onClick="onDoBtnClick"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="#000000"
		android:id="@+id/main_btn_do"/>

	<Button
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="取消"
		android:onClick="onCancelBtnClick"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="#000000"
		android:id="@+id/main_btn_cancel"
		android:visibility="gone"/>

	<ProgressBar
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/main_probar"
		android:visibility="gone"/>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="match_parent"
		android:id="@+id/main_txt_pro"
		android:textColor="#000000"
        android:gravity="center"/>

</LinearLayout>

